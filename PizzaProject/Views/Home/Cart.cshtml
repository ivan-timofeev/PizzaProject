@model IEnumerable<Cart.Item>
@{
    ViewData["Title"] = "Корзина";
}

<h1 style="margin-top: 80px; margin-bottom: 40px;">Корзина</h1>

<table class="table">
    <thead>
        <tr>
            <th>Название товара</th>
            <th class="td-price">Цена</th>
            <th></th>
            <th>Кол-во</th>
        </tr>
    </thead>
    <tbody id="content">
       @foreach (var item in Model)
        {
            <tr>
                <td>@item.Pizza.Name</td>
                <td class="td-price">@String.Format("{0:f}", item.Pizza.Price)</td>
                <td></td>
                <td>@item.Count</td>
            </tr>
        }
    </tbody>
</table>

<div class="final-sum">
    <b>Итого:</b>
    <span class="final-sum-value">@String.Format("{0:f}", Model.Sum(t => t.Pizza.Price * t.Count)) руб.</span>
    <div><a class="order-btn" href="/">Оформить заказ</a></div>
</div>

<style>
    .td-price {
        text-align: right;
    }

    .final-sum {
        margin: 40px 80px;
        text-align: right;
    }

    .final-sum-value {
        margin-left: 40px;
    }

    .order-btn {
        margin-top: 20px;
        color: black;
        display: inline-block;
        background-color: lightgreen;
        border-radius: 10px;
        padding: 8px 14px;
        cursor: pointer;
        transition: 0.2s;
        -ms-user-select: none;
        -moz-user-select: none;
        -khtml-user-select: none;
        -webkit-user-select: none;

        text-decoration: none;
    }

    .order-btn:hover {
        color: black;
        text-decoration: none;
    }
</style>